{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "yarn install && node scripts/check-env.js && yarn build"
  },
  "deploy": {
    "startCommand": "NODE_ENV=production yarn start",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 3
  }
}