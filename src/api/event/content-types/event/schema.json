{
  "kind": "collectionType",
  "collectionName": "events",
  "info": {
    "singularName": "event",
    "pluralName": "events",
    "displayName": "Event",
    "description": "Store events and special occasions"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "maxLength": 200,
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "name",
      "required": true
    },
    "description": {
      "type": "text"
    },
    "event_type": {
      "type": "enumeration",
      "enum": [
        "grand_opening",
        "product_launch",
        "educational",
        "community",
        "sale",
        "other"
      ],
      "default": "other"
    },
    "start_datetime": {
      "type": "datetime",
      "required": true
    },
    "end_datetime": {
      "type": "datetime"
    },
    "is_all_day": {
      "type": "boolean",
      "default": false
    },
    "is_recurring": {
      "type": "boolean",
      "default": false
    },
    "recurrence_pattern": {
      "type": "string",
      "maxLength": 100
    },
    "max_attendees": {
      "type": "integer"
    },
    "registration_required": {
      "type": "boolean",
      "default": false
    },
    "registration_url": {
      "type": "string"
    },
    "featured_image": {
      "type": "media",
      "multiple": false,
      "allowedTypes": [
        "images"
      ]
    },
    "gallery": {
      "type": "media",
      "multiple": true,
      "allowedTypes": [
        "images",
        "videos"
      ]
    },
    "brand": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::brand.brand",
      "inversedBy": "events"
    },
    "stores": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::store.store",
      "inversedBy": "events"
    },
    "seo": {
      "type": "component",
      "component": "seo.meta",
      "repeatable": false
    },
    "region": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::region.region",
      "inversedBy": "events"
    }
  }
}
