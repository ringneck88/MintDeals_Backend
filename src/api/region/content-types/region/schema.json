{
  "kind": "collectionType",
  "collectionName": "regions",
  "info": {
    "singularName": "region",
    "pluralName": "regions",
    "displayName": "Region",
    "description": "State/region management for legal and operational requirements"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "maxLength": 100,
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "name"
    },
    "parent_regions": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::region.region"
    },
    "region_type": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::reigion-type.reigion-type"
    },
    "stores": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::store.store",
      "mappedBy": "region"
    },
    "timezone": {
      "type": "string",
      "default": "America/New_York"
    },
    "geoArea": {
      "type": "component",
      "component": "common.geo-area",
      "repeatable": false
    },
    "promotions": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::promotion.promotion",
      "mappedBy": "regions"
    },
    "events": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::event.event",
      "mappedBy": "region"
    },
    "announcements": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::announcement.announcement",
      "mappedBy": "regions"
    },
    "compliance_policies": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::compliance-policy.compliance-policy",
      "mappedBy": "region"
    },
    "Image": {
      "type": "media",
      "multiple": false,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "seo": {
      "type": "component",
      "component": "seo.meta",
      "repeatable": false
    }
  }
}
