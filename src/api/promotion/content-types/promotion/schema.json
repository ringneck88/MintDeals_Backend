{
  "kind": "collectionType",
  "collectionName": "promotions",
  "info": {
    "singularName": "promotion",
    "pluralName": "promotions",
    "displayName": "Promotion",
    "description": "Promotional offers and deals for brands and stores"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "maxLength": 200,
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "name",
      "required": true
    },
    "description": {
      "type": "text"
    },
    "terms_conditions": {
      "type": "text"
    },
    "discount_type": {
      "type": "enumeration",
      "enum": [
        "percentage",
        "fixed_amount",
        "bogo",
        "free_item",
        "other"
      ],
      "default": "percentage"
    },
    "discount_value": {
      "type": "decimal"
    },
    "minimum_purchase": {
      "type": "decimal"
    },
    "start_date": {
      "type": "datetime",
      "required": true
    },
    "end_date": {
      "type": "datetime"
    },
    "is_active": {
      "type": "boolean",
      "default": true
    },
    "featured_image": {
      "type": "media",
      "multiple": false,
      "allowedTypes": [
        "images"
      ]
    },
    "brand": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::brand.brand",
      "inversedBy": "promotions"
    },
    "store": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::store.store",
      "inversedBy": "promotions"
    },
    "seo": {
      "type": "component",
      "component": "seo.meta",
      "repeatable": false
    },
    "regions": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::region.region",
      "inversedBy": "promotions"
    }
  }
}
