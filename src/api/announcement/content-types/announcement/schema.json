{
  "kind": "collectionType",
  "collectionName": "announcements",
  "info": {
    "singularName": "announcement",
    "pluralName": "announcements",
    "displayName": "Announcement",
    "description": "Store announcements and important notices"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "maxLength": 200,
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "name",
      "required": true
    },
    "description": {
      "type": "text"
    },
    "content": {
      "type": "richtext"
    },
    "announcement_type": {
      "type": "enumeration",
      "enum": [
        "general",
        "hours_change",
        "closure",
        "new_product",
        "policy_update",
        "maintenance",
        "urgent"
      ],
      "default": "general"
    },
    "priority": {
      "type": "enumeration",
      "enum": [
        "low",
        "normal",
        "high",
        "urgent"
      ],
      "default": "normal"
    },
    "start_date": {
      "type": "datetime",
      "required": true
    },
    "end_date": {
      "type": "datetime"
    },
    "is_pinned": {
      "type": "boolean",
      "default": false
    },
    "show_on_homepage": {
      "type": "boolean",
      "default": false
    },
    "featured_image": {
      "type": "media",
      "multiple": false,
      "allowedTypes": [
        "images"
      ]
    },
    "brand": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::brand.brand"
    },
    "stores": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::store.store",
      "inversedBy": "announcements"
    },
    "seo": {
      "type": "component",
      "component": "seo.meta",
      "repeatable": false
    },
    "regions": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::region.region",
      "inversedBy": "announcements"
    }
  }
}
