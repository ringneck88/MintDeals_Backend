{
  "kind": "collectionType",
  "collectionName": "pages",
  "info": {
    "singularName": "page",
    "pluralName": "pages",
    "displayName": "Global Page",
    "description": "CMS pages with dynamic layouts"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "maxLength": 200,
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "layout": {
      "type": "component",
      "component": "page.blocks",
      "repeatable": true
    },
    "seo": {
      "type": "component",
      "component": "seo.meta",
      "repeatable": false
    },
    "brand": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::brand.brand",
      "inversedBy": "pages"
    }
  }
}
